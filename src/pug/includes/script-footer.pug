        });
    
        // show PROMPT
        document.getElementById("btPrompt").addEventListener( "click", function(e) {
        e.preventDefault();
        
            alertui.prompt('Prompt Ui'
                , ' Ullam corporis suscipit laboriosam, nisi ut aliquid ex ea commodi consequatur?'
                , []
                , function(_value){
                
                   alertui.alert('Alert example'
                        , 'On the <strong>' + _value + '</strong> other hand, we denounce with righteous indignation.'
